<html>
  <head>
    <title>Sign Up</title>
    <link
      rel="stylesheet"
      href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css"
    />

    <style>
      body {
        margin: 0;
        padding: 0;
        /* background-color: white; */
        text-align: center;
        background-image: url(assets/img/svg/separators/curve.svg);
      }
      .box {
        background-color: white;
        border-radius: 10px;
        border: 1.5px solid #ccc;
        width: 400px;
        padding: 40px;
        top: 50%;
        height: 527px;
        left: 50%;
        position: absolute;
        transform: translate(-50%, -50%);
        color: white;
        text-align: center;
        transition: box-shadow 0.3s;
      }

      .box:hover {
        box-shadow: 0 0 11px rgba(33, 33, 33, 0.2);
      }

      .input {
        background: none;
        margin: 1px 0px 19px;
        padding: 17px;
        width: 85%;
        height: 37px;
        border: 1px solid #37353563;
        border-radius: 5px;
        color: black;
        text-align: left;
        transition: 0.3s;
      }

      .btn {
        background-color: #1a73e8;
        padding: 5px;
        border-radius: 7px;
        width: 40%;
        margin: 20px;
        color: white;
      }

      .btn:hover {
        background-color: lightgreen;
        color: black;
      }

      h2 {
        color: black;
        font: 18px;
      }

      .h1,
      .h2,
      .h3,
      h1,
      h2,
      h3 {
        margin-top: -74px;
        margin-bottom: 10px;
        color: black;
      }

      img {
        width: 38%;
        position: absolute;
        top: -140px;
        right: 134px;
      }

      #email,
      #password {
        position: absolute;
        color: grey;
        font-size: 12px;
        background-color: white;
      }

      #email {
        left: 80px;
        top: 202px;
      }

      #password {
        top: 271px;
        left: 80px;
      }

      #npass {
        margin-right: 193px;
        color: black;
      }

      #cnfpas {
        margin-right: 138px;
        color: black;
      }

      #username {
        margin-right: 195px;
        color: black;
      }

      #eemail {
        margin-right: 222px;
        color: black;
      }

      .signin {
        display: flex;
        justify-content: flex-end;
        margin-bottom: 4px;
      }
    </style>
  </head>

  <body>
    <div class="box container">
      <img src="applogo.png" />
      <form action="/signup" method="POST" novalidate>
        <br /><br /><br />
        <h2>Create your account</h2>
        <br />
        <div class="login" style="margin-top: 5px">
          <label id="username">Username</label>
          <input
            name="username"
            type="text"
            placeholder="Enter username"
            class="input"
            required
          />
          <label id="email">Email</label>
          <input
            name="email"
            type="text"
            placeholder="Enter email"
            class="input"
            required
          />
          <label id="npass">Password</label>
          <input
            name="password"
            type="text"
            placeholder="Enter new password"
            class="input"
            required
          />
          <label id="cnfpas">Confirm password</label>
          <input
            name="confirmPassword"
            type="text"
            placeholder="Retype new password"
            class="input"
            required
          />
        </div>
        <div class="signin">
          <button style="margin-left: 12px" type="submit" class="btn">
            Create Account
          </button>
        </div>
        <% if (errorMessage) { %>
        <center>
          <div style="height: 30px; color: red"><%= errorMessage %></div>
        </center>
        <% } %>
        <br />
        <div>
          <a style="margin-left: 5px" href="/login">Back to login page!</a>
        </div>
      </form>
      <br /><br /><br />
    </div>
  </body>
</html>
